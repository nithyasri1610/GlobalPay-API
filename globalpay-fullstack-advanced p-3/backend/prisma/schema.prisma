datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Customer {
  id      Int      @id @default(autoincrement())
  name    String
  email   String   @unique
  payments Payment[]
}

model Payment {
  id         Int      @id @default(autoincrement())
  amount     Int
  currency   String
  status     String
  customer   Customer @relation(fields: [customerId], references: [id])
  customerId Int
}
